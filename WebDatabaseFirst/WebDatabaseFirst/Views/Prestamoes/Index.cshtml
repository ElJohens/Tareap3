@model IEnumerable<WebDatabaseFirst.Models.Prestamo>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Prestamos</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Numero de Préstamo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Cedula
            </th>
            <th>
                Cliente
            </th>
            <th>
                Coleccion de Libros prestados
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrestamoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrestamoNavigation.CedulaCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrestamoNavigation.NombreCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrestamoLibroId)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.PrestamoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrestamoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrestamoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
